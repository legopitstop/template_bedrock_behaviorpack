{
  "format_version": "1.20.80",
  "minecraft:block": {
    "description": {
      "identifier": "MOD_ID:rotatable_block",
      "properties": {
        "direction": [0, 1, 2, 3, 4, 5, 6]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/chests/simple_dungeon.json",
      "minecraft:block_light_absorption": 0,
      "minecraft:destroy_time": 1.25,
      "minecraft:explosion_resistance": 4.2,
      "minecraft:geometry": "geometry.wall_switch",
      "minecraft:on_player_placing": {
        "event": "place_direction"
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "MOD_ID:rotatable_block",
          "render_method": "blend"
        }
      },
      "minecraft:entity_collision": {
        "origin": [-8, 0, -8],
        "size": [16, 16, 16]
      },
      "minecraft:pick_collision": {
        "origin": [-8, 0, -8],
        "size": [16, 16, 16]
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('direction') == 0",
        "components": {
          "minecraft:rotation": [-90, 90, 0]
        }
      },
      {
        "condition": "query.block_property('direction') == 1",
        "components": {
          "minecraft:rotation": [90, 90, 0]
        }
      },
      {
        "condition": "query.block_property('direction') == 2",
        "components": {
          "minecraft:rotation": [0, 0, 0]
        }
      },
      {
        "condition": "query.block_property('direction') == 3",
        "components": {
          "minecraft:rotation": [0, 180, 0]
        }
      },
      {
        "condition": "query.block_property('direction') == 4",
        "components": {
          "minecraft:rotation": [0, 90, 0]
        }
      },
      {
        "condition": "query.block_property('direction') == 5",
        "components": {
          "minecraft:rotation": [0, -90, 0]
        }
      }
    ],
    "events": {
      "place_direction": {
        "set_block_property": {
          "direction": "(query.cardinal_block_face_placed_on)"
        }
      }
    }
  }
}
